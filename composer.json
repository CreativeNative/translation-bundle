{
    "name": "creativenative/translation-bundle",
    "description": "Manages Doctrine translations",
    "type": "symfony-bundle",
    "keywords": [
        "symfony",
        "doctrine",
        "translation"
    ],
    "homepage": "https://github.com/CreativeNative/translation-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Oskar Golde",
            "email": "info@oskargolde.de"
        }
    ],
    "require": {
        "php": ">=8.4",
        "doctrine/doctrine-bundle": "^2.15.1",
        "doctrine/orm": "^3.5.2",
        "ramsey/uuid": "^4.9.0",
        "symfony/framework-bundle": "v7.3.2",
        "symfony/yaml": "v7.3.2",
        "symfony/security-bundle": "^v7.3.2",
        "symfony/property-access": "v7.3.2",
        "twig/twig": "^v3.21.1",
        "symfony/translation-contracts": "^3.6",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "symfony/phpunit-bridge": "^v7.3.1",
        "phpunit/phpunit": "^12.3.6",
        "php-parallel-lint/php-parallel-lint": "^v1.4.0",
        "squizlabs/php_codesniffer": "^3.13",
        "phpstan/phpstan": "^2.1.17",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan-deprecation-rules": "^2.0.3",
        "phpstan/phpstan-strict-rules": "^2.0.4",
        "rector/rector": "^2.1.2",
        "phpcompatibility/php-compatibility": "^9.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
        "slevomat/coding-standard": "^8.20",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "ext-sqlite3": "*"

    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "TMI\\TranslationBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TMI\\TranslationBundle\\Test\\": "tests/",
            "TMI\\TranslationBundle\\Fixtures\\": "tests/Fixtures/"
        }
    },

    "scripts": {
        "test":  [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpunit"
        ],
        "cs-check": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpcs -s"
        ],
        "cs-fix": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpcbf"
        ],
        "stan-max": "vendor/bin/phpstan analyse -c phpstan.neon --level max --ansi -vvv",
        "stan-next": "vendor/bin/phpstan analyse -c phpstan.neon --level 2 --ansi -vvv",
        "stan-min": "vendor/bin/phpstan analyse -c phpstan.neon --level 1 --ansi -vvv",
        "rector": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/rector process --dry-run"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
