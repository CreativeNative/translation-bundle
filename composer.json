{
    "name": "tmi/translation-bundle",
    "description": "A Symfony bundle that manages translations with Doctrine.",
    "type": "symfony-bundle",
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.3.*"
        }
    },
    "keywords": [
        "symfony",
        "doctrine",
        "translation"
    ],
    "homepage": "https://github.com/CreativeNative/translation-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Oskar Golde",
            "email": "info@terra-mia.immo"
        }
    ],
    "require": {
        "php": ">=8.4",
        "doctrine/doctrine-bundle": "^2.16.0",
        "doctrine/orm": "^3.5.2",
        "ramsey/uuid": "^4.9.1",
        "symfony/framework-bundle": "^v7.3.3",
        "symfony/security-bundle": "^v7.3.3",
        "symfony/yaml": "^v7.3.3",
        "symfony/property-access": "^v7.3.3",
        "twig/twig": "^v3.21.1",
        "symfony/translation-contracts": "^3.6.0",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "symfony/phpunit-bridge": "^7.3.3",
        "phpunit/phpunit": "^12.3.8",
        "php-parallel-lint/php-parallel-lint": "^v1.4.0",
        "squizlabs/php_codesniffer": "^3.13.4",
        "phpstan/phpstan": "^2.0",
        "phpstan/extension-installer": "^1.4.3",
        "phpstan/phpstan-deprecation-rules": "^2.0.3",
        "phpstan/phpstan-strict-rules": "^2.0.6",
        "phpstan/phpstan-symfony": "^2.0.7",
        "rector/rector": "^2.1.5",
        "phpcompatibility/php-compatibility": "^9.3.5",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.1.2",
        "slevomat/coding-standard": "^8.21.1",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "ext-sqlite3": "*",
        "ext-xdebug": "*",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Tmi\\TranslationBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tmi\\TranslationBundle\\Test\\": "tests/",
            "Tmi\\TranslationBundle\\Fixtures\\": "tests/Fixtures/"
        }
    },
    "scripts": {
        "test":  [
            "XDEBUG_MODE=coverage vendor/bin/phpunit"
        ],
        "cs-check": [
            "vendor/bin/phpcs -s"
        ],
        "cs-fix": [
            "vendor/bin/phpcbf"
        ],
        "stan-max": "vendor/bin/phpstan analyse -c phpstan.neon --level max --memory-limit=512M --ansi -vvv",
        "stan-next": "vendor/bin/phpstan analyse -c phpstan.neon --level 2 --memory-limit=512M --ansi -vvv",
        "stan-min": "vendor/bin/phpstan analyse -c phpstan.neon --level 1 --memory-limit=512M --ansi -vvv",
        "rector": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/rector process --dry-run"
        ]
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
